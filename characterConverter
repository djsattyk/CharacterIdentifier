import java.awt.Font;
import javax.swing.JOptionPane;
import javax.swing.JTextField;


public class characterEnlarger {
	public characterEnlarger(){
		JTextField textfield = new JTextField("");
		 textfield.setFont(textfield.getFont().deriveFont(Font.BOLD, 24));
		 JOptionPane.showMessageDialog(null, textfield);
		 String userinput = textfield.getText();
		 char ch = userinput.charAt(0);
	
		String hex = String.format("%04x", (int) ch);
		JOptionPane.showMessageDialog(null, "Your character in hexadecimal is: " + hex);
		 //String hex = String.format("%04x", textfield.getText());
		 //System.out.print("Conrad is an esse" + hex);
		 
		 JOptionPane.showMessageDialog(null, "To program "+ ch + " in java, you must type \"int hex =" + hex + " System.out.println((char) hex););\"");         

	}

	
}
